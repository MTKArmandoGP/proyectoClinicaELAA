<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registro_usuarios">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/editTextUsuario"
            android:layout_width="349dp"
            android:layout_height="57dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/bordetext"
            android:drawableRight="@drawable/baseline_person_24"
            android:elevation="50dp"
            android:ems="10"
            android:hint="Nombre"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextApellido"
            android:layout_width="349dp"
            android:layout_height="57dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/bordetext"
            android:drawableRight="@drawable/baseline_person_24"
            android:elevation="50dp"
            android:ems="10"
            android:hint="Apellido" />

        <EditText
            android:id="@+id/editTextCorreo"
            android:layout_width="349dp"
            android:layout_height="57dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="185dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/bordetext"
            android:drawableRight="@drawable/baseline_email_24"
            android:elevation="50dp"
            android:ems="10"
            android:hint="Correo" />

        <EditText
            android:id="@+id/editTextTelefono"
            android:layout_width="349dp"
            android:layout_height="57dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="260dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/bordetext"
            android:drawableRight="@drawable/baseline_local_phone_24"
            android:elevation="50dp"
            android:ems="10"
            android:hint="Telefono" />

        <EditText
            android:id="@+id/editTextUsuario1"
            android:layout_width="349dp"
            android:layout_height="57dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="340dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/bordetext"
            android:drawableRight="@drawable/baseline_person_24"
            android:elevation="50dp"
            android:ems="10"
            android:hint="Usuario" />

        <EditText
            android:id="@+id/editTextContraseña"
            android:layout_width="349dp"
            android:layout_height="57dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="410dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/bordetext"
            android:drawableRight="@drawable/baseline_password_24"
            android:elevation="50dp"
            android:ems="10"
            android:hint="Contraseña" />

        <Button
            android:id="@+id/btn_registrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextContraseña"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/bkg_boton2"
            android:backgroundTint="#C8064469"
            android:elevation="100dp"
            android:text="Registrar" />

    </RelativeLayout>


</FrameLayout>